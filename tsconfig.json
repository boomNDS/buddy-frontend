{
	// https://nuxt.com/docs/guide/concepts/typescript
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,

		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"src/*": ["src/*"],
			"#app": [".nuxt/imports.d.ts"],
			"#imports": [".nuxt/imports.d.ts"],
			"#vue": [".nuxt/imports.d.ts"],
			"#build/*": ["./.nuxt/types/*"],
			"#components/*": ["./components/*"]
		}
	},
	"include": [
		"./components/**/*.vue",
		"./composables/**/*.ts",
		"./pages/**/*.vue",
		"./plugins/**/*.ts",
		"./.nuxt/imports.d.ts"
	],
	"exclude": ["node_modules", ".nuxt", "dist"]
}
